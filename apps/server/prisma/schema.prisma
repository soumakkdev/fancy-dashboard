generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
  uid   String
  happy Boolean @default(false)
}

model Customer {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  emailId     String @unique
  mobileNo    String
  callingCode String

  payment Payment?
  address Address

  status String
  notes  String?
  orders Order[]
}

type Payment {
  number String
  expiry String
  cvv    String
  name   String
  card   String
}

type Address {
  address String
  city    String
  state   String
  country String
  pinCode String
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  sku         String
  price       String
  image       String
  status      String?

  orderItems OrderItem[]
}

model OrderItem {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  quantity Int?

  product   Product @relation(fields: [productId], references: [id])
  productId String  @db.ObjectId

  order   Order?  @relation(fields: [orderId], references: [id])
  orderId String? @db.ObjectId
}

model Order {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  customer  Customer @relation(fields: [cutomerId], references: [id])
  cutomerId String   @db.ObjectId

  items OrderItem[]

  subtotal Int
  discount Int
  total    Int
}
